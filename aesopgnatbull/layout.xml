<Layout xmlns="urn:speedata.de/2021/xts/en"
    xmlns:sd="urn:speedata.de/2021/xtsfunctions/en">


    <Stylesheet>
      @font-face { font-family: "Fauna One"; src: url("FaunaOne-Regular.ttf");}
      @font-face { font-family: "Playfair Display"; src: url("PlayfairDisplay-Regular.ttf");}
      p {
            color: white ;
            font-size: 9pt;
            line-height: 17pt;
            font-family: "Fauna One";
        }

        .heading {
            font-size: 40pt;
            line-height: 48pt;
            font-family: "Playfair Display";
        }

    </Stylesheet>


    <Pageformat width="210mm" height="140mm"/>

    <DefineMasterpage name="first" test="sd:current-page() = 1" margin="1cm">
      <AtPageCreation>
        <PlaceObject column="-2mm" row="-2mm">
          <Image width="214mm" href="forest.jpg"/>
        </PlaceObject>
      </AtPageCreation>
    </DefineMasterpage>

    <Record element="data">
        <PlaceObject row="2" column="3">
            <Textblock width="8">
                <Paragraph class="heading">
                    <Value select="upper-case(story/@title)"/>
                </Paragraph>
            </Textblock>
        </PlaceObject>

        <PlaceObject column="3">
            <Textblock width="10">
              <ForAll select="story/p">
                <Paragraph>
                  <Value select="."/>
                </Paragraph>
                <Paragraph/>
              </ForAll>
            </Textblock>
          </PlaceObject>

      </Record>
</Layout>
