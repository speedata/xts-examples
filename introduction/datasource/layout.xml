<Layout xmlns="urn:speedata.de/2021/xts/en"
    xmlns:sd="urn:speedata.de/2021/xtsfunctions/en">
    <LoadFontfile name="regular" filename="CrimsonPro-Regular.ttf" />
    <LoadFontfile name="bold" filename="CrimsonPro-Bold.ttf" />
    <LoadFontfile name="italic" filename="CrimsonPro-Italic.ttf" />

    <!-- text is the default font face -->
    <DefineFontfamily name="text">
        <Regular fontface="regular" />
        <Italic fontface="italic" />
        <Bold fontface="bold" />
    </DefineFontfamily>

    <DefineFontfamily name="title">
        <Regular fontface="bold" />
    </DefineFontfamily>

    <DefineFontsize fontsize="16pt" leading="18pt" name="title"/>

    <Record element="data">
        <PlaceObject>
            <Textblock fontsize="title">
                <Paragraph fontfamily="title">
                    <Value>Text and markup from the CDATA section (with sd:decode-html()):</Value>
                </Paragraph>
                <Paragraph>
                    <Value select="sd:decode-html(html)" />
                </Paragraph>
            </Textblock>
        </PlaceObject>
        <PlaceObject>
            <Textblock fontsize="title">
                <Paragraph fontfamily="title">
                    <Value>Text and markup from the data file:</Value>
                </Paragraph>
                <ForAll select="text">
                    <Paragraph>
                        <Value select="." />
                    </Paragraph>
                </ForAll>
            </Textblock>
        </PlaceObject>
    </Record>
</Layout>